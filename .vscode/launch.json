{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django Debug",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8000",
        "--settings=govhack_backend.settings"
      ],
      "django": true,
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "DEBUG": "True",
        "DB_NAME": "govhack_dev",
        "DB_USER": "postgres",
        "DB_PASSWORD": "dev123",
        "DB_HOST": "localhost",
        "DB_PORT": "5433",
        "REDIS_URL": "redis://localhost:6380/0"
      },
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "justMyCode": false
    },
    {
      "name": "Django Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "args": [
        "test",
        "--settings=govhack_backend.settings",
        "--verbosity=2"
      ],
      "django": true,
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "DEBUG": "True"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Django Shell",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "args": [
        "shell",
        "--settings=govhack_backend.settings"
      ],
      "django": true,
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal"
    },
    {
      "name": "Import Budget Data",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "args": [
        "import_budget",
        "--dry-run",
        "--settings=govhack_backend.settings"
      ],
      "django": true,
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal"
    }
  ]
}